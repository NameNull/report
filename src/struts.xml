<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package namespace="/" name="front" extends="struts-default">
		<action name="profit" method="findProfits" class="com.ace.action.ProfitAction">
			<result>/pages/profit/list.jsp</result>
		</action>
	</package>
	<package namespace="/ajax" name="ajax" extends="json-default">
		<action name="*/*" method="{1}" class="com.ace.action.ProfitAction">
			<param name="id">{2}</param>
			<result type="json" name="ajaxSuccess">
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
	</package>
</struts>
